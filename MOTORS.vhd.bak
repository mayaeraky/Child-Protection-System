LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

ENTITY MOTORS IS PORT(
OUTPUT,CLK: IN STD_LOGIC;
WHEEL1,WHEEL2,WHEEL3,WHEEL4,ENABLE1,ENABLE2:OUT STD_LOGIC);
END MOTORS;

ARCHITECTURE FUNCTION3 OF MOTORS IS
BEGIN
WITH OUTPUT SELECT
ENABLE1<='1' WHEN '1',
         '0' WHEN OTHERS;
WITH OUTPUT SELECT
ENABLE2<='1' WHEN '1',
         '0' WHEN OTHERS;
PROCESS(CLK,ENABLE1,ENABLE2)
BEGIN
IF(ENABLE1='1' AND RISING_EDGE(CLK)) THEN
WHEEL1<='1';
WHEEL2<='0';
WHEEL3<='1';
WHEEL4<='0';
ELSIF(ENABLE1='1' AND FALLING_EDGE(CLK)) THEN
WHEEL1<='0';
WHEEL2<='1';
WHEEL3<='0';
WHEEL4<='1';
END IF;
END IF;
END PROCESS;
END FUNCTION3;
